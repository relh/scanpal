<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ampvita.scanpal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ampvita.scanpal.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.ampvita.scanpal.VoiceActivity"
            android:label="@string/title_activity_voice" >
        </activity>
        <activity
            android:name="com.ampvita.scanpal.PayPalActivity"
            android:label="@string/title_activity_pay_pal" >
        </activity>
        <activity
            android:name="com.paypal.android.MEP.PayPalActivity"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name="com.ampvita.scanpal.QRActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.ampvita.scanpal.MainActivity"
            android:label="ScanPal" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ampvita.scanpal.ImageActivity"
            android:label="@string/title_activity_image" >
        </activity>
    </application>

</manifest>